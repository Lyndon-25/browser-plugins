{
  "manifest_version": 3,
  "name": "MDN Focus",
  "version": "1.1.0",
  "description": "Focus on MDN documentation content by hiding distracting elements",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "MDN Focus"
  },
  "commands": {
    "toggle-focus": {
      "suggested_key": {
        "default": "Alt+F",
        "mac": "Alt+F"
      },
      "description": "Toggle focus mode"
    }
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["*://*.developer.mozilla.org/*"]
}
