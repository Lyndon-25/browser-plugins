{
  "manifest_version": 3,
  "name": "Trip Helper",
  "version": "1.0.0",
  "description": "A helper extension for Trip.com websites that enhances URL parameter ordering",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Trip Helper"
  },
  "permissions": ["webNavigation", "tabs"],
  "host_permissions": ["*://*.trip.com/*", "*://*.ctrip.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}
