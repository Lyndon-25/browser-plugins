{
  "manifest_version": 3,
  "name": "Merge Windows",
  "version": "1.0.0",
  "description": "Merge multiple browser windows into one window to improve work efficiency",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Merge All Windows"
  },
  "commands": {
    "merge-windows": {
      "suggested_key": {
        "default": "Alt+M",
        "mac": "Alt+M"
      },
      "description": "Merge all windows"
    }
  },
  "permissions": ["tabs"]
}
